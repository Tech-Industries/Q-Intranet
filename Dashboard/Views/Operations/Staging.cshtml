            <div class="ibox-title">
                <h3>Detail</h3>
            </div>
            <div class="ibox-content" style="height: 600px;">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover  full-height dtStagingDetail">
                        <thead>
                            <tr>
                                <th class="hidden">ID</th>
                                <th>Status</th>
                                <th>Job</th>
                                <th>Suffix</th>
                                <th>Seq</th>
                                <th>Date Start</th>
                                <th>Part</th>
                                <th>Desc.</th>
                                <th>WC</th>
                            </tr>
                        </thead>
                        <tbody></tbody>
                    </table>
